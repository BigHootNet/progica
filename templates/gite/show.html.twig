{% extends "base.html.twig" %}
{% block title %}
	{{ gite.nom }}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body">
					{{ gite.nom }}
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10">
			{{ gite.description }}
		</div>
	</div>

	<div class="row">
		<div class="col-md-6"></div>
		<table clas="table">
			<tr>
				<th>Surface</th>
				<td>{{ gite.surface }}
					m²</td>
			</tr>
			<tr>
				<th>Chambre</th>
				<td>{{ gite.chambre }}</td>
			</tr>
			<tr>
				<th>Couchage</th>
				<td>{{ gite.couchage }}</td>
			</tr>
		</table>
		<div class="col-md-6">
			<h2>Equipement(s)</h2>
			<table class="table">
				{% for equipement in gite.equipements %}
					<tr>
						<td>
							{{ equipement.name }}
						</td>
					</tr>

				{% endfor %}
			</table>
		</div>
		<div class="col-md-6">
			<h2>Coordonnées propriétaires</h2>
			<table class="table">
				<tr>
					<th>
						Nom :
					</th>
					<td>
					{% if gite.user.surname is defined %}
						{{ gite.user.surname }} {{ gite.user.lastname }}
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Téléphone :
					</th>
					<td>
					{% if gite.user.phone is defined %}
						{{ gite.user.phone }}
						{% endif %}
					</td>
				</tr>
				<tr>
					<th> Email :
					</th>
					<td>
					{% if gite.user.email is defined %}
						{{ gite.user.email }}
						{% endif %}
					</td>
			</table>
		</div>

	{% endblock %}
